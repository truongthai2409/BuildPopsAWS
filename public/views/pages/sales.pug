extend ../layouts/layout

append head 
  //- <script type="text/JavaScript" src="path/to/jquery.print.js"></script>
  script(src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js") 
block vars 
  -title = 'Sales'
  -bodyClass = 'sales'
  -Data = reqData 
block container 
  .container1 
    include ../blocks/bill_detail
    .sale 
      .show-product 
        .cart-FindCustomer.sticky 
          .icon-FindCustomer
            i.fa-solid.fa-laptop-code.icon-user 
          .form-FindCustomer 
            input.form-FindCustomer(type='text' id='customer' name='customer' placeholder='Search Product')
          .button-FindCustomer 
            i.fa-solid.fa-magnifying-glass.icon-find
        ul.list-card 
          each data in Data ? Data : []
            li.list-card-item 
              a(class=`${data._id}`)#add_product
                //- img(src="../../images/bg01.jpg", alt="alt")
                p#product_id #{data._id}
                img(src=`${data.image_urls}`, alt="")
                h4#product_name #{data.product_name}
                strong#retail_price #{data.retail_price.toLocaleString()} đ
      .cart
        .cart-FindCustomer 
          .icon-FindCustomer
            i.fa-solid.fa-user-tie.icon-user 
          .form-FindCustomer 
            input.form-FindCustomer(type='text' id='form-FindCustomer' name='customer' placeholder='Search Customer' onkeydown='searchCustomer(event)')
          .button-FindCustomer 
            i.fa-solid.fa-magnifying-glass.icon-find
          .list-FindCustomer
            ul
              li.list-FindCustomer-item 1
              li.list-FindCustomer-item 2
              li.list-FindCustomer-item 3
        .cart-warp
          //- .cart-item 
          //-   .set-name 
          //-     h4 iPhone 15 Pro Max 256GB
          //-   .set-item 
          //-     i.fa-solid.fa-square-caret-down#less-product
          //-     span#qualtity 1
          //-     i.fa-solid.fa-square-caret-up#add-product
          //-   .set-price 
          //-     span 36,990,000 đ
          //-     i.fa-regular.fa-trash-can.icon-trash
          //- .line
        .cart-payment 
          .cart-payment-detail.voucher
            form(action="")#voucher
              label(for="voucher") 
                h4 Voucher
                  i.fa-solid.fa-gift
              input(type="text" placeholder="Enter voucher")#voucher_value
              span#span_voucher voucher
            //- h3 36,990,000 đ
          .cart-payment-detail 
            h3 Total 
            h3#cart-payment-total 36,990,000 đ
          .buttonPayment#addProducts
            i.fa-regular.fa-credit-card 
            h3 Payment

block append scripts 
  script(src="../../scripts/sale.js") 
  script(src="../../scripts/bill_detail.js") 
  